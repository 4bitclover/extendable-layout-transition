<?xml version="1.0" encoding="utf-8"?>






<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FAAAAA"
    android:gravity="center" tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/make_payment" android:layout_width="200dp"
        android:layout_height="70dp" android:layout_marginTop="200dp"
        android:background="#941F1F" android:gravity="center"
        android:orientation="vertical" android:text="Make payment"
        android:textSize="18sp" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
        android:transitionName="make_payment_transition">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Make payment" android:textColor="#FFFFFF"
            android:textSize="24sp" android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/checkout" android:layout_width="200dp"
        android:layout_height="70dp" android:layout_marginTop="32dp"
        android:background="#FD5F5F" android:gravity="center"
        android:text="Check your cart" android:textColor="#FFFFFF"
        android:textSize="18sp" android:transitionName="checkout_transition"
        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/make_payment">
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Order" android:textColor="#FFFFFF"
            android:textSize="24sp" android:textStyle="bold" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>